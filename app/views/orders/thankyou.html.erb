<div class="main">

  <!-- ========== PAGE TITLE ========== -->
  <div class="page-title-div gradient-bg">
    <div class="container">
      <div class="row page-title-row">

        <div class="col-md-6">
          <h1 class="page-title">Contact Us</h1>
          <p>Something more about this page.</p>
        </div>
        <div class="col-md-6">
          <ol class="breadcrumb pull-right border-0">
            <li><a href="#" class="trans">Home</a></li>
            <li><a href="#" class="trans">Pages</a></li>
            <li><a href="#" class="active trans">Contact Us</a></li>
          </ol>
        </div>

      </div> <!-- end page-title-row -->
    </div> <!-- end container -->
  </div> <!-- end page-title-div -->

  <section class="content-section">
    <div class="container">
      <div class="row">

        <div class="col-md-4">

          <!-- ========== SECTION HEADER ========== -->
          <div class="section-header">
            <h3 class="section-title underline">We are here!</h3>
            <p class="section-subtitle">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.</p>
          </div> <!-- end section-header -->

          <div class="mb50 col-sm-6 col-md-12">
            <h6 class="underline">Address</h6>
            <p>A203, Ishwarya Residency, <br>
              Kaspate Wasti, Wakad Road, <br>
              Pune, India - 411 057</p>
          </div>

          <div class="mb50 col-sm-6 col-md-12">
            <h6 class="underline">Contact Us</h6>
            <p>+1 (123) 456-7890 <br>
              +1 (456) 567-1234 <br>
              support@themesease.com</p>
          </div>
        </div> <!-- end col-md-4 -->

        <div class="col-md-8 ui form">

          <!-- ========== SECTION HEADER ========== -->
          <div class="section-header">
            <h3 class="section-title underline">Drop us a line!</h3>
            <p class="section-subtitle">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.</p>
          </div> <!-- end section-header -->
          <% if @order.payment.paid? %>
              <!--<meta HTTP-EQUIV="REFRESH" content="1.5; url=<#%= nonpay_user_path(current_user)%>">-->
              <div class="payment_message">
                <h2>Payment Successful</h2>
                <h3>you have purchased ​​<%#= @order.session %> of ​<%#= @teacher_name %> class<%#="es" if @order.session.to_i > 1 %>.</h3>
                <h3>automatically redirect to page...</h3>
              </div>

              <script>
                window.dataLayer = window.dataLayer || [];
                dataLayer.push({
                  event: 'payment_success',
                  'transactionId': '<%= @order.id %>',
                  'transactionTotal': <%= @order.after_ship_amount %>,
                  'transactionProducts': [{
                    'name': '<%= @order.order_number %>',
                    'price': <%= @order.after_ship_amount %>,
                    'freight': <%= @order.freight %>
                  }]
                });
              </script>

          <% else %>
              <div class="payment_message">
                <h2>Payment Failure</h2>
                <h3>Please do the operation again.</h3>
                <h3>automatically redirect to page...</h3>
              </div>
          <% end %>

        </div> <!-- end col-md-8 -->

      </div> <!-- end row -->
    </div> <!-- end container -->
  </section>

</div> <!-- end main -->


